---
const { variant = "primary", size = "medium" } = Astro.props;
const buttonStyling = "px-4 py-2 rounded focus:outline-none focus:ring-2 focus:ring-offset-2 ";
const variantClasses = {
  primary: "bg-blue-500 text-white hover:bg-blue-600 hover:scale-105 transition-transform",
  secondary: "bg-gray-500 text-white hover:bg-gray-600 hover:scale-105 transition-transform",
  tertiary: "bg-transparent text-black",
};
const sizeClasses = {
  small: "text-sm",
  medium: "text-base",
  large: "text-lg",
};
---

<div>
  <button class:list={[buttonStyling, variantClasses[variant], sizeClasses[size]]}><slot /></button>
</div>
